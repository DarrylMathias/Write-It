<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT" crossorigin="anonymous">
        <link rel="stylesheet" href="/stylesheets/style.css">
</head>

<body>
    <h1 class="display-3 m-3">Users</h1>
    <table class="table table-striped table-responsive">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <th scope="col">Age</th>
                <th scope="col">Image</th>
                <th scope="col">
                    Delete
                </th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach((user, i)=> { %>

                <!-- Deletion Confirmation Modal -->
                <div class="modal fade" id="deleteUserModal<%= i %>" tabindex="-1" aria-labelledby="exampleModalLabel"
                    aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h1 class="modal-title fs-5" id="exampleModalLabel">Confirm deletion of <%= user.name %>
                                </h1>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                    aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <div class="alert alert-danger d-flex align-items-center" role="alert">
                                    <div>
                                        This process is irreversible
                                    </div>
                                </div>

                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                <p><a href="/admin/deleteUser/<%= user._id %>"
                                        class="link-danger link-offset-2 link-underline-opacity-0 link-underline-opacity-100-hover mx-3">Delete</a>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <tr>
                    <th scope="row">
                        <%= i+1 %>
                    </th>
                    <td>
                        <%= user.name %>
                    </td>
                    <td>
                        <%= user.email %>
                    </td>
                    <td>
                        <%= user.age %>
                    </td>
                    <% if(user.image){ %>
                        <td><img src="/images/uploads/<%= user.image %>" alt="img" height="30"></td>
                        <% }else{ %>

                            <td>No Image</td>
                            <% } %>
                                <td><a class="card-link" data-bs-toggle="modal" data-bs-target="#deleteUserModal<%= i %>"
                                        style="cursor: pointer;"><button type="button"
                                            class="btn btn-sm btn-outline-danger mx-1">Delete</button></a></td>
                </tr>
                <% }); %>

        </tbody>
    </table>
    <h1 class="display-3 m-3">Posts</h1>
    <table class="table table-striped table-responsive">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Author</th>
                <th scope="col">Title</th>
                <th scope="col">Content</th>
                <th scope="col">Image</th>
                <th scope="col">
                    Delete
                </th>
            </tr>
        </thead>
        <tbody>
            <% posts.forEach((post, i)=> { %>

                <!-- Deletion Confirmation Modal -->
                <div class="modal fade" id="deletePostModal<%= i %>" tabindex="-1" aria-labelledby="exampleModalLabel"
                    aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h1 class="modal-title fs-5" id="exampleModalLabel">Confirm deletion of <%= post.title
                                        %>
                                </h1>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                    aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <div class="alert alert-danger d-flex align-items-center" role="alert">
                                    <div>
                                        This process is irreversible
                                    </div>
                                </div>

                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                <p><a href="/admin/deletePost/<%= post._id %>"
                                        class="link-danger link-offset-2 link-underline-opacity-0 link-underline-opacity-100-hover mx-3">Delete</a>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <tr>
                    <th scope="row">
                        <%= i+1 %>
                    </th>
                    <td>
                        <%= post.author.name %>
                    </td>
                    <td>
                        <%= post.title %>
                    </td>
                    <td>
                        <a href="/admin/readPost/<%= post._id %>"><%= post.content.slice(0,100) + '...' %></a>
                    </td>
                    <% if(post.image){ %>
                        <td><img src="/images/uploads/<%= post.image %>" alt="img" height="30"></td>
                        <% }else{ %>

                            <td>No Image</td>
                            <% } %>
                                <td><a class="card-link" data-bs-toggle="modal" data-bs-target="#deletePostModal<%= i %>"
                                        style="cursor: pointer;"><button type="button"
                                            class="btn btn-sm btn-outline-danger mx-1">Delete</button></a></td>
                </tr>
                <% }); %>

        </tbody>
    </table>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-j1CDi7MgGQ12Z7Qab0qlWQ/Qqz24Gc6BM0thvEMVjHnfYGF0rmFCozFSxQBxwHKO"
        crossorigin="anonymous"></script>
</body>

</html>