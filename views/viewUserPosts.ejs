<!DOCTYPE html>
<html lang="en" data-bs-theme='dark'>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/style.css" />
</head>

<body>
    <%- include("partials/navbar") %>

        <div class="album py-5 bg-body-tertiary">
            <div class="container">

                <h1 class="display-5 my-4">All of your posts: </h1>
                <div class="row row-cols-1 row-cols-sm-1 row-cols-md-2 row-cols-lg-3 g-3">
                    <% if(posts){ %>
                        <% posts.forEach((post, i)=> { %>
                            <!-- Deletion Confirmation Modal -->
                            <div class="modal fade" id="deleteModal<%= i %>" tabindex="-1"
                                aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h1 class="modal-title fs-5" id="exampleModalLabel">Confirm deletion of <%=
                                                    post.title %>
                                            </h1>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            <div class="alert alert-danger d-flex align-items-center" role="alert">
                                                <div>
                                                    This process is irreversible
                                                </div>
                                            </div>

                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary"
                                                data-bs-dismiss="modal">Close</button>
                                            <p><a href="/posts/delete/<%= post._id %>"
                                                    class="link-danger link-offset-2 link-underline-opacity-0 link-underline-opacity-100-hover mx-3">Delete</a>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col">
                                <div class="card shadow-sm">
                                    <% if(post.image){ %>
                                        <img src="<%= post.image %>" alt=""
                                            style="max-height: 300px; max-width: 100%; object-fit: cover;">

                                        <%}else{ %>
                                            <svg aria-label="Placeholder: Thumbnail"
                                                class="bd-placeholder-img card-img-top" height="225"
                                                preserveAspectRatio="xMidYMid slice" role="img" width="100%"
                                                xmlns="http://www.w3.org/2000/svg">
                                                <title>Placeholder</title>
                                                <rect width="100%" height="100%" fill="#55595c"></rect>
                                            </svg>
                                            <% } %>
                                                <div class="card-body">
                                                    <h4 class="card-title">
                                                        <%= post.title %>
                                                    </h4>
                                                    <p class="card-text">
                                                        <%= post.content %>
                                                    </p>
                                                    <div class="d-flex justify-content-between align-items-center">
                                                        <div class="btn-group"><a
                                                                href="/posts/read/<%= post._id %>"><button
                                                                    type="button "
                                                                    class="btn btn-sm btn-outline-secondary mx-1">Read</button>
                                                            </a>
                                                            <a href="/posts/edit/<%= post._id %>"><button type="button "
                                                                    class="btn btn-sm btn-outline-success mx-1">Edit</button>
                                                            </a>
                                                            <a class="card-link" data-bs-toggle="modal"
                                                                data-bs-target="#deleteModal<%= i %>"
                                                                style="cursor: pointer;"><button type="button"
                                                                    class="btn btn-sm btn-outline-danger mx-1">Delete</button></a>
                                                        </div>
                                                    </div>
                                                </div>
                                </div>
                            </div>
                            <% }); %>
                                <% }else{ %>
                                    <p class="lead">You've written no posts.. ðŸ˜”</p>
                                    <% } %>
                </div>
            </div>
        </div>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-j1CDi7MgGQ12Z7Qab0qlWQ/Qqz24Gc6BM0thvEMVjHnfYGF0rmFCozFSxQBxwHKO" crossorigin="anonymous">
            </script>
</body>

</html>